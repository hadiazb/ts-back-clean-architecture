{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", ".prettierc"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": ["error", { "code": 100 }],
    "linebreak-style": ["error", "windows"],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off",
    "comma-dangle": "off",
    "indent": ["error", 2],
    "new-cap": "off"
  }
}
